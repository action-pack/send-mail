    "nodemailer": "^6.9.9",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "eslint-plugin-jsdoc": "^48.0.4",
    "eslint-config-strongloop": "^2.1.0"
  },
  "overrides": {
    "@actions/http-client": "2.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "eslint . --fix"
